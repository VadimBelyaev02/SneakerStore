<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="6" author="Vadim">
            <createTable tableName="addresses">
                <column name="id" type="uuid">
                    <constraints primaryKey="true"/>
                </column>
                <column name="country" type="varchar(64)"/>
                <column name="address" type="varchar(64)"/>
                <column name="city" type="varchar(64)"/>
            </createTable>

            <createTable tableName="addresses_customers">
                <column name="customer_id" type="uuid">
                    <constraints primaryKey="true" references="customers(id)"/>
                </column>
                <column name="address_id" type="uuid">
                    <constraints primaryKey="true" references="addresses(id)"/>
                </column>
            </createTable>
    </changeSet>

</databaseChangeLog>